{
  // Python settings (keep yours)
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "off",
  "python.formatting.provider": "black",

  // Editor formatting
"editor.formatOnSave": true,           // auto-format on save
"editor.tabSize": 4,                    // 4 spaces per indent
"editor.insertSpaces": true,            // use spaces instead of tabs
"editor.wordWrap": "on",                // wrap long lines
"editor.minimap.enabled": true,         // show the minimap
"editor.renderWhitespace": "all",       // makes spaces/tabs visible
"editor.rulers": [80, 120],             // vertical guide lines
"editor.cursorSmoothCaretAnimation": "on", // smooth cursor movement
"editor.cursorBlinking": "expand",     // easier to see
"editor.selectionHighlight": true,     // highlight other uses of selected text


  // Prettier settings
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "always",
  "prettier.printWidth": 80,
  "prettier.semi": true,

  // Optional: make JS async/await chains easier to read
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "javascript.format.placeOpenBraceOnNewLineForFunctions": true,
  "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,

  // JS stuff
  "javascript.suggest.autoImports": true,      // auto-import for JS
"typescript.suggest.autoImports": true,      // same for TS
"python.analysis.autoSearchPaths": true,     // Python auto-import search
"python.analysis.useLibraryCodeForTypes": true,
"editor.parameterHints.enabled": true,       // shows function signature hints
"editor.quickSuggestions": { "other": true, "comments": false, "strings": true },
"eslint.enable": true,                      // JS linting if ESLint installed
"eslint.validate": ["javascript", "javascriptreact"],  
"python.linting.enabled": true,
"python.linting.pylintEnabled": true,
"python.linting.mypyEnabled": true,
"python.linting.flake8Enabled": true,
"files.autoSave": "onFocusChange",         // automatically save when leaving file
"editor.codeActionsOnSave": { "source.fixAll.eslint": "always" }, // auto-fix JS

"editor.foldingStrategy": "auto",
"python.defaultInterpreterPath": "" // collapsible functions/blocks

}
